<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card" action="/signup" method="POST">
        <div class="card-header">
          <h3>Registrar Usuario</h3>
        </div>
        <div class="card-body">
          <label for="fullname">Escriba su Nombre Completo:</label>
          <input
            type="type"
            name="fullname"
            placeholder="Ingrese nombre completo"
            class="form-control mb-3"
            autofocus
          />
          <label for="username">Nombre de Usuario:</label>
          <input
            type="text"
            name="username"
            placeholder="Ingrese nombre de Usuario"
            class="form-control mb-3"
          />

          <label for="password">Contrase√±a:</label>
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="form-control mb-3"
          />
          <button class="btn btn-success btn-block">
            Registrar
          </button>
        </div>
      </form>

      <div class="justify-content-center align-item-center text-center">
        <p class="fs-5 text-center mt-3">Ud. ya tiene una cuenta?</p>
        <a href="/signin">Inicio de Sesion</a>
    </div>
  </div>
</div>