{{>navigation}}

<div id="booking gradientefondo" class="section">
  <div class="">
    <div class="container">
      <div class="row">
        <div class="booking-form">
          <form action="/links/editart/{{artDatos.id_art}}" method="POST">
            <div class="row">
              <h5 class="badge bg-primary fs-5">DATOS ART</h5>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">NOMBRE</span>
                  <input
                    class="form-control"
                    type="text"
                    name="nombre_art"
                    value="{{artDatos.nombre_art}}"
                  />
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <span class="form-label">TELEFONO</span>
                  <input
                    class="form-control"
                    type="text"
                    name="telefono_art"
                    value="{{artDatos.telefono_art}}"
                  />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <span class="form-label">MAIL</span>
                  <input
                    class="form-control"
                    type="text"
                    value="{{artDatos.mail_art}}"
                    name="mail_art"
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <span class="form-label">DOMICILIO</span>
                  <input
                    class="form-control"
                    type="text"
                    name="domicilio_art"
                    value="{{artDatos.domicilio_art}}"
                  />
                </div>
              </div>
            </div>
            
            <div class="row d-flex justify-content-around">
              <div class="col-md-3">
                <div class="form-btn">
                  <button class="submit-btn border border-ligth" role="button">GUARDAR ART</button>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-btn">
                  <a
                    class="btn submit-btn border border-ligth"
                    href="/profile"
                    role="button"
                  >CANCELAR</a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>